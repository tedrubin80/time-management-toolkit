# NPM Configuration for Time Management Toolkit
# Fixes React 18 peer dependency conflicts

# Enable legacy peer deps to bypass strict peer dependency checks
legacy-peer-deps=true

# Disable funding messages during install
fund=false

# Disable audit during install for faster builds
audit=false

# Reduce log noise
loglevel=warn
progress=false

# Set registry (default npm registry)
registry=https://registry.npmjs.org/

# Optimize for production builds
prefer-offline=false
cache-max=3600